<!DOCTYPE html>
<html lang="{{conf.lang}}" dir="{{lang.direction}}">

<head>
    <meta charset="utf-8" />
    <title>{{tpl_pagetitle()}} | {{conf.title}}</title>
    <link rel="stylesheet" href="{{tpl_basedir}}/public/css/main.css">
    {% include "partials/colors.twig" with {'colors': colors} %}
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {{ tpl_favicon|raw }}
</head>

<body class="font-body antialiased mr-4 lg:mr-10 lg:text-lg {{tld}} {{ tpl_classes }} {{ metadata.subject|join(" ") }}">
    
    {% include "partials/menu.twig" with {'menu': menu} %}
    
    <header class="bg-cover bg-primary-light relative" style="padding-top: 20vh;">
    {% include "partials/breadcrumbs.twig" with {'breadcrumbs': breadcrumbs} %}
    <div class="max-w-screen-xl mx-auto">
        <div class="relative inline-block bg-primary-transparent bg-opacity-75 bg-blur  rounded-tr-3xl text-white text-right" style="margin-left: -2000px; padding: 50px 50px 50px 2000px;">
            <div class="text-3xl ml-4 lg:ml-0 lg:text-5xl xl:mr-0 font-script">{{bible.book.title}} {{bible.chapter}}</div>
        </div>
    </div>
    </header>
    <article class="bg-lightgray-lighter px-4 md:px-8 xl:px-0 py-8">
        <div class="max-w-screen-xl mx-auto">
             {% if id == "bibel:start" %}
                {{ tpl_content(false) }}
            {% else %}
                <div class="grid grid-cols-3 gap-16">
                    <div class="col-span-2">
                       
                        {% for verse in bible.verses %}
                            <span class="verse"><sup>{{verse.verse}}</sup> {{verse.text}}</span>
                        {% endfor %}
                    </div>
                    <div class="uk-width-1-3@l">
                        <h2>Artikel</h2>
                        {% for article in articles %}
                            <a href="?id={{article.id}}" class="uk-display-block uk-padding uk-card uk-card-white">
                                <h4>{{article.title}}</h4>
                                <p>{{article.desc}}</p>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            
            <div class="clear-both"></div>
        </div>
    </article>
    

    {% include "partials/footer.twig" %}

    <script>DOKU_TPL = "{{tpl_basedir}}";</script>
    <script src="{{tpl_basedir}}/public/js/main.js" type="text/javascript"></script>
    {{ tpl_indexerWebBug() }}
</body>
</html>


