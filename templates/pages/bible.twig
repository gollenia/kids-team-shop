<!DOCTYPE html>
<html lang="{{conf.lang}}" dir="{{lang.direction}}" class="no-js">

<head>
    <meta charset="utf-8" />
    <title>{{tpl_pagetitle()}} | {{conf.title}}</title>
    <script>(function(H){H.className=H.className.replace(/\bno-js\b/,'js')})(document.documentElement)</script>
    <link rel="stylesheet" href="{{tpl_basedir}}/assets/dist/main.css">
    {% include "partials/colors.twig" with {'colors': colors} %}
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {{ tpl_favicon|raw }}
</head>

<body class="{{ tpl_classes }} {{ metadata.subject|join(" ") }}">
    <header>

    </header>
    <div class="logo-image"><a href="/"><img data-src="{{ tpl_basedir }}assets/dist/img/logo.svg" class="ctx-logo-image" uk-svg width="70" height="70px"></a></div>
    {% include "partials/menu.twig" with {'menu': menu} %}
    {% include "partials/menu-mobile.twig" with {'menu': menu.get_items} %}
    {% include "partials/breadcrumbs.twig" with {'breadcrumbs': breadcrumbs} %}
    <div class="uk-section">
        <div class="uk-container">
            {% if id == "bibel:start" %}
                {{ tpl_content(false) }}
            {% else %}
                <div uk-grid>
                    <div class="uk-width-2-3@l">
                        <h2>{{bible.book.title}} {{bible.chapter}}</h2>
                        {% for verse in bible.verses %}
                            <span class="verse"><sup>{{verse.verse}}</sup> {{verse.text}}</span>
                        {% endfor %}
                    </div>
                    <div class="uk-width-1-3@l">
                        <h2>Artikel</h2>
                        {% for article in articles %}
                            <a href="?id={{article.id}}" class="uk-display-block uk-padding uk-card uk-card-white">
                                <h4>{{article.title}}</h4>
                                <p>{{article.desc}}</p>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            
        </div>
    </div>
    {{ tpl_include_page("sidebar", false) }}

    {% if acl.admin %}
        <a class="ctx-floating-button" href="edit">EDIT</a>
    {% endif %}

    {% include "partials/footer.twig" %}

    <script>DOKU_TPL = "{{tpl_basedir}}";</script>
    <script src="{{tpl_basedir}}/assets/dist/main.js" type="text/javascript"></script>
    {{ tpl_indexerWebBug() }}
</body>
</html>